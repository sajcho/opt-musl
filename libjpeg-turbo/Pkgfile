# Description:	Accelerated baseline JPEG compression and decompression library.
# URL:		https://www.libjpeg-turbo.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cmake nasm

name=libjpeg-turbo
version=3.0.3
release=1
source=(https://github.com/libjpeg-turbo/libjpeg-turbo/releases/download/${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	mkdir build-shared build-static
	cd build-shared

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DBUILD_SHARED_LIBS=ON \
		-DENABLE_STATIC=OFF \
		-DWITH_JPEG8=ON \
		-DWITH_SIMD=ON \
		-DCMAKE_SKIP_INSTALL_RPATH=ON \
		-Wno-dev

	ninja -v

	cd ../build-static

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DBUILD_SHARED_LIBS=OFF \
		-DENABLE_STATIC=ON \
		-DWITH_JPEG8=ON \
		-DWITH_JPEG8=ON \
		-DCMAKE_SKIP_INSTALL_RPATH=ON \
		-Wno-dev

	ninja -v

	cd $SRC/${name}-${version}

	DESTDIR=$PKG cmake --install build-shared
	DESTDIR=$PKG cmake --install build-static

	rm -r $PKG/usr/share/doc
}
