# Description:	A C library for reading and writing files containing sampled sound
# URL:		http://www.mega-nerd.com/libsndfile
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	alsa-lib flac lame libvorbis mpg123 opus sqlite3

name=libsndfile
version=1.2.2
release=2
source=(https://github.com/libsndfile/${name}/archive/${version}/${name}-${version}.tar.gz)

build() {
	cd ${name}-${version}

	mkdir build-shared build-static

	cd build-shared
	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DBUILD_SHARED_LIBS=ON \
		-Wno-dev

	ninja -v

	cd ../build-static
	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DBUILD_SHARED_LIBS=OFF \
		-Wno-dev

	ninja -v

	cd $SRC/${name}-${version}
	DESTDIR=$PKG cmake --install build-shared
	DESTDIR=$PKG cmake --install build-static

	rm -r $PKG/usr/share/doc
}
