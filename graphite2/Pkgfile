# Description:	Graphite2 is a rendering engine for graphite fonts.
# URL:		https://graphite.sil.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	freetype

name=graphite2
version=1.3.14
release=1
source=(https://github.com/silnrsi/graphite/releases/download/${version}/${name}-${version}.tgz)

build() {
	cd ${name}-${version}

	mkdir build-shared build-static
	cd build-shared

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DGRAPHITE2_COMPARE_RENDERER=ON \
		-Wno-dev

	ninja -v

	cd ../build-static

	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=OFF \
		-DGRAPHITE2_COMPARE_RENDERER=ON \
		-Wno-dev

	ninja -v

	cd $SRC/${name}-${version}

	DESTDIR=$PKG cmake --install build-static
	DESTDIR=$PKG cmake --install build-shared
}
