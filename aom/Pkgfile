# Description:	Alliance for Open Media (AOM) AV1 codec SDK
# URL:		https://aomedia.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cmake yasm

name=aom
_realname=libaom
version=3.9.1
release=1
source=(https://storage.googleapis.com/aom-releases/${_realname}-${version}.tar.gz \
	posix-implicit.patch)

build() {
	cd ${_realname}-${version}/build

	patch -p1 -d $SRC/${_realname}-${version} -i $SRC/posix-implicit.patch

	cmake .. -G Ninja \
		-DAOM_TARGET_CPU=generic \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=ON \
		-DENABLE_NASM=OFF \
		-DENABLE_TESTS=OFF \
		-Wno-dev

	ninja -v

	DESTDIR=$PKG ninja install
}
