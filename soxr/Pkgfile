# Description:	High quality, one-dimensional sample-rate conversion library
# URL:		https://sourceforge.net/projects/soxr
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	cmake

name=soxr
version=0.1.3
release=1
source=(https://downloads.sourceforge.net/project/${name}/${name}-${version}-Source.tar.xz)

build() {
	cd ${name}-${version}-Source

	mkdir build-shared build-static

	cd build-shared
	cmake .. -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DBUILD_TESTS=OFF \
		-Wno-dev

	ninja -v

	cd ../build-static
	cmake .. -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=OFF \
		-DBUILD_TESTS=OFF \
		-Wno-dev

	ninja -v

	cd $SRC/${name}-${version}-Source

	DESTDIR=$PKG cmake --install build-shared
	DESTDIR=$PKG cmake --install build-static

	rm -r $PKG/usr/share/doc
}
